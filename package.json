{
  "name": "open-whispr",
  "version": "1.4.6",
  "description": "A desktop dictation application using whisper.cpp for speech-to-text transcription",
  "main": "main.js",
  "private": true,
  "scripts": {
    "compile:globe": "node scripts/build-globe-listener.js",
    "compile:fast-paste": "node scripts/build-macos-fast-paste.js",
    "compile:winkeys": "node scripts/build-windows-key-listener.js",
    "compile:native": "npm run compile:globe && npm run compile:fast-paste && npm run compile:winkeys",
    "prestart": "npm run compile:native",
    "start": "electron .",
    "predev": "npm run compile:native",
    "dev": "concurrently -k -r \"npm:dev:renderer\" \"npm:dev:main\"",
    "predev:main": "npm run compile:native",
    "dev:main": "cross-env NODE_ENV=development node scripts/run-electron.js --dev",
    "dev:renderer": "cd src && vite",
    "prebuild": "npm run compile:native && npm run download:whisper-cpp && npm run download:llama-server && npm run download:sherpa-onnx",
    "build": "cd src && vite build && cd .. && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "build:renderer": "cd src && vite build",
    "prebuild:mac": "npm run compile:native && npm run download:whisper-cpp && npm run download:llama-server && npm run download:sherpa-onnx",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "prebuild:win": "npm run compile:native && npm run download:whisper-cpp && npm run download:llama-server && npm run download:sherpa-onnx",
    "build:win": "npm run build:renderer && electron-builder --win",
    "prebuild:linux": "npm run compile:native && npm run download:whisper-cpp && npm run download:llama-server && npm run download:sherpa-onnx",
    "build:linux": "npm run build:renderer && electron-builder --linux",
    "setup": "node setup.js",
    "prepack": "npm run compile:native && npm run download:whisper-cpp && npm run download:llama-server && npm run download:sherpa-onnx",
    "pack": "npm run build:renderer && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder --dir",
    "predist": "npm run compile:native && npm run download:whisper-cpp && npm run download:llama-server && npm run download:sherpa-onnx",
    "dist": "npm run build:renderer && electron-builder",
    "download:whisper-cpp": "node scripts/download-whisper-cpp.js --current",
    "download:whisper-cpp:all": "node scripts/download-whisper-cpp.js --all",
    "download:llama-server": "node scripts/download-llama-server.js --current",
    "download:llama-server:all": "node scripts/download-llama-server.js --all",
    "download:sherpa-onnx": "node scripts/download-sherpa-onnx.js --current",
    "download:sherpa-onnx:all": "node scripts/download-sherpa-onnx.js --all",
    "format:js": "eslint . --fix && cd src && eslint . --fix && prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format": "npm run format:js",
    "format:check": "eslint . && cd src && eslint . && prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "lint": "eslint . && cd src && eslint .",
    "typecheck": "cd src && tsc --noEmit",
    "quality-check": "npm run format:check && npm run typecheck",
    "preview": "cd src && vite preview",
    "clean": "node cleanup.js"
  },
  "keywords": [
    "dictation",
    "speech-to-text",
    "whisper",
    "whisper.cpp",
    "electron",
    "desktop-app"
  ],
  "author": {
    "name": "OpenWhispr Team",
    "email": "support@openwhispr.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^3.0.1",
    "@electron/rebuild": "^4.0.3",
    "@eslint/js": "^9.25.0",
    "@tailwindcss/vite": "^4.1.10",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "electron": "^36.9.5",
    "electron-builder": "^26.4.0",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^16.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.1.10",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.3.5"
  },
  "dependencies": {
    "@neondatabase/neon-js": "^0.1.0-beta.22",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.12",
    "better-sqlite3": "^11.10.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dbus-next": "^0.10.2",
    "dotenv": "^16.3.1",
    "electron-updater": "^6.6.2",
    "ffmpeg-static": "^5.2.0",
    "lucide-react": "^0.518.0",
    "object-assign": "^4.1.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-markdown": "^10.1.0",
    "shadcn-ui": "^0.9.5",
    "tailwind-merge": "^3.3.1",
    "tar": "^7.4.3",
    "tw-animate-css": "^1.3.4",
    "unzipper": "^0.12.3",
    "ws": "^8.19.0"
  }
}
